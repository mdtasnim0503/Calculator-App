<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buAC"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#A5A5A5"
            android:onClick="numberEvent"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buPlusMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#A5A5A5"
            android:onClick="numberEvent"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buPercent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#A5A5A5"
            android:onClick="numberEvent"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

    <Button
        android:id="@+id/buMultiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:onClick="numberEvent"
        android:textSize="33sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        android:backgroundTint="#FF9F0A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bu7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:onClick="numberEvent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:backgroundTint="#333333" />

    <Button
        android:id="@+id/bu8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:onClick="numberEvent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        android:backgroundTint="#333333" />

        <Button
            android:id="@+id/bu9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:onClick="numberEvent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:backgroundTint="#333333" />

        <Button
            android:id="@+id/buDivide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#FF9F0A"
            android:onClick="numberEvent"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/bu4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:onClick="numberEvent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        android:backgroundTint="#333333"/>
    <Button
        android:id="@+id/bu5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:onClick="numberEvent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        android:backgroundTint="#333333" />
    <Button
        android:id="@+id/bu6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:onClick="numberEvent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/round_button"
        android:backgroundTint="#333333" />
        <Button
            android:id="@+id/buPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:onClick="numberEvent"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:backgroundTint="#FF9F0A" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bu1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:onClick="numberEvent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:backgroundTint="#333333"/>
            <Button
                android:id="@+id/bu2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:onClick="numberEvent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:backgroundTint="#333333" />
            <Button
                android:id="@+id/bu3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:onClick="numberEvent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:backgroundTint="#333333" />
            <Button
                android:id="@+id/buMinus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:onClick="numberEvent"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:backgroundTint="#FF9F0A" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/bu0"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rectangle_button"
            android:backgroundTint="#333333"
            android:onClick="numberEvent"
            android:text="0"
            android:gravity="left|center_vertical"
            android:paddingLeft="15pt"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="."
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:onClick="numberEvent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:backgroundTint="#333333" />
        <Button
            android:id="@+id/buEqual"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="="
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:onClick="numberEvent"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/round_button"
            android:backgroundTint="#FF9F0A" />
    </LinearLayout>
</LinearLayout>